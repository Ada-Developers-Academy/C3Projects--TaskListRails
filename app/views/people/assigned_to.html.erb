<h1>Tasks assigned to user <%= @person.id %> aka <%=@person.name %></h1>
<table>
  <thead>
    <tr>
      <td>Task Name</td>
      <td>Task Description</td>
      <td>Date Completed</td>
    </tr>
  </thead>

  <tbody>
    <% @person.tasks.each do |task| %>
    <tr>
      <td><a href=<%="/task_#{task.id}/details"%>> <%= task.name %></a></td>
      <td><%= task.description %></td>
      <td><%= task.completed_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><a href="/people">Return to User List</p></a>
<p><a href="/"> Return Home</p></a>
