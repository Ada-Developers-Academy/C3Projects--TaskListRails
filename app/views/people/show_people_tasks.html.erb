<table class="table_data">
  <tr="table_headers">
    <th>Person</th>
    <th>Tasks</th>
    <th>Completed?</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td> <%= @person.name %></td>
      <td> <%= task.name %> </td>
      <td> <%= task.completed_at ? "Yes!" : "Nope" %></td>
    </tr>
  <% end %>
</table>
