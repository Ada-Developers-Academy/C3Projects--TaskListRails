<h1> <%= "#{@person.name}'s Tasks" %> </h1>

<div class="persons_tasks">
  <table>
    <tr>
      <th>Task Name</th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %> </td>
    </tr>
    <% end %>
  </table>
</div>
<p> <%= link_to "Back to #{@person.name}'s Page", "/people" %> <p>
