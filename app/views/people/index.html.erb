<% content_for :head do %>
  <title>People</title>
<% end %>

<table>

  <tr>
    <th>Person</th>
    <th>Uncompleted Tasks</th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td>
        <%= link_to "#{person.name}", "/people/#{person.id}" %>
      </td>

      <td>
        <%= person.tasks.where(completion_status: false).count %>
      </td>
  <% end %>

</table>
