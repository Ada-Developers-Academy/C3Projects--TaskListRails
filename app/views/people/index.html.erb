<h1>The people of the Tasks!</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Incomplete Tasks</th>
  </tr>
  <tr>
  <% @people.each do |person| %>

    <td><%= person[:name] %></td>

   <% person_tasks = Task.where(:person_id => person.id) %>
   <% todo_tasks = person_tasks.where(:completed_at => nil).count %>

   <td> <%= todo_tasks %></td>

    </tr>
  <% end %>
</table>

<%= button_to "Back to List", "/", method: "get" %>

