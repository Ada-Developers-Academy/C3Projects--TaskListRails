<h1>People List </h1>
<div class="all_people">
<table>
  <tr>
    <th>Person Name</th>
    <th># of Completed Tasks </th>
    <th># of Uncompleted Tasks</th>
  </tr>

  <% @people.each do |person|  %>
  <tr>
    <td>
      <%= link_to "#{person.name}", "/people/#{person.id}" %>
    </td>

    <td>
      <%= person.completed_task_count %>
    </td>
    <td>
      <%= person.uncompleted_task_count %>
    </td>
    </tr>
<% end %>
</table>
</div>

<p> <%= link_to "Back to List of All Tasks", "/" %> <p>
