<h1> List of tasks for <%= @person.name %> </h1>

<table>
  <thead>Task</thead>

  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Description </th>
    <th> Date</th>
    <th> Created on</th>
    <th> Updated at </th>
    <th> Completed </th>
  </tr>

  <% @their_tasks.each do |task| %>

  <tr>
    <td>  <%= task.id %> </td>
    <td>  <%= task.name %> </td>
    <td>  <%= task.description %> </td>
    <td>
      <% if task.date != nil%>
        <%= task.date.month %>/<%= task.date.day %>/<%= task.date.year %>
      <% else %>
        <%= "" %>
      <% end %>
    </td>
    <td>  <%= task.created_at.month %>/<%= task.created_at.month %>/<%= task.created_at.year %> </td>
    <td>  <%= task.updated_at %> </td>
    <td>  <%= task.completed %> </td>
  </tr>
  <% end %>
</table>
