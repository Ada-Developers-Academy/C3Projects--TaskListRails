<div class="show_people">
  <h1><%= @person.name.capitalize %>'s Profile:</h1>

  <%= image_tag "#{@person.name.downcase}.jpg" %>

  <table>
   <thead>
		<tr>
			<th>Name</th>
			<th>To Be Completed</th>
			<th></th>
		</tr>
	 </thead>

	 <tbody>
			<tr>
				<td><%= @person.name %></td>
				<td><%= @person.tasks.where(completed_at: nil).count %>/<%= @person.tasks.count %></td>
				<td><%= link_to "Tasks", "/people/#{@person.id}/tasks", class: "details_button" %></td>
			</tr>
	 </tbody>

  </table>

  <div class="button"><%= link_to "Other Owners", "/people" %></div>
  <div class="button"><%= link_to "Return To Task List", "/" %></div>

</div> 