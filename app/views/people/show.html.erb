<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Created</th>
      <th>Date Updated</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @person.name %></td>
      <td><%= @person.created_at %></td>
      <td><%= @person.updated_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to "See #{@person.name}'s Tasks", { action: "show_tasks", id: @person.id }, method: :get, class: "button" %>

<%= link_to "All people", "/people", class: "button" %>
