<h1>Task Details</h1>

<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Description
    </th>
    <th>
      Status
    </th>
    <th>
      Completion Date
    </th>
  </tr>
  <tbody>
    <tr>
      <td>
        <%= @show_task.name %>
      </td>
      <td>
        <%= @show_task.description %>
      </td>
      <td>
        <%= @show_task.completed_date ? "Completed" : "Not Completed"%>
      </td>
      <td>
        <%= @show_task.completed_date %>
      </td>
    </tr>
  </tbody>
</table>
