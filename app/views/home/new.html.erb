<h1>Create New Task</h1>

<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true%>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completed_date, "Completed Date" %>
  <%= f.datetime_local_field :completed_date %>

  <%= f.submit %>

<% end %>
