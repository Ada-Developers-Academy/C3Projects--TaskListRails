<h1>Task List (Rails!)</h1>

<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Status
    </th>
    <th>
      Details
    </th>
    <th>
      Delete
    </th>
  </tr>
  <tbody>
    <% @all_tasks.each do |task| %>
    <tr>
      <td>
        <%= task.name %>
      </td>
      <td>
        <%= task.completed_date ? "Completed" : "Not Completed"%>
      </td>
      <td>
        <%= link_to "Show", "/tasks/#{task.id}" %>
      </td>
      <td>
        <%= link_to "Delete", "/delete_task/#{task.id}" %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

<p>
  <%= link_to "Create New Task", "/tasks/new" %>
</p>
