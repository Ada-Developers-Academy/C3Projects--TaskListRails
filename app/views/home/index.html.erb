<h1>Task List (Rails!)</h1>

<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Status
    </th>
    <th>
      Details
    </th>
  </tr>
  <tbody>
    <% @all_tasks.each do |data| %>
    <tr>
      <td>
        <%= data.name %>
      </td>
      <td>
        <%= data.completed_date ? "Completed" : "Not Completed"%>
      </td>
      <td>
        <%= link_to "Show", "/tasks/#{data.id}" %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

<p>
  <%= link_to "Create New Task", "/tasks/new" %>
</p>
