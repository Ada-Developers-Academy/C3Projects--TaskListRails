<h4>ARE YOU SURE YOU WANT TO DELETE THIS TASK?</h4>

<h1> TASK #<%= @task[:id] %></h1>

<table>
  <tr>
    <th> Name </th>
    <th> Description </th>
    <th> Completed? </th>
    <th> Date Completed </th>
  </tr>
  <tr>
    <td><%= @task[:name] %></td>
    <td><%= @task[:description] %></td>
    <% if @task[:completed_at] == nil %>
      <td>No</td>
    <% else %>
      <td>Yes</td>
    <% end %>
    <td><%= @task[:completed_at] %></td>
  </tr>
</table>

  <%= button_to "NO", method: :delete %>
  <%= button_to "YES", method: :get  %>
