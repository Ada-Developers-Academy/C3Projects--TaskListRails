<% content_for :head do %>
  <title>Carl's Taskmaster: Delete this task. You know you didn't want to <%= @task.name %>, anyway.</title>
<% end %>

<h2 class="copper">Are you sure you want to delete this task?</h2>
<p><%= @task.name %></p>
<p><%= @task.description %></p>
<% if @task.date_complete %>
  <p><%= @task.date_complete.strftime("%A, %B %d, %Y") %></p>
<% end %>

<div class="finish-him">
  <% genders = ["him", "her", "her", "him", "her", "her", "him", "him"] %>
  <% gender = genders.sample %>
  <%= button_to "FINISH #{ gender.upcase }!", "/deleted/#{ @task.id }", method: "delete" %>
</div>
