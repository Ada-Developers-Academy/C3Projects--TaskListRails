<h1>
  Edit "<%= @task.name %>"!
</h1>

<%= form_for @task, url: "/tasks/#{@task.id}" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completed_at %>
  <%= f.date_field :completed_at %>

  <%= f.submit 'Edit Task' %>
<% end %>
