<div class="edit">
  <h1>Edit Your Task</h1>

  <div class="form">
    <%= form_for @edit_task, url: {action: "make_update"}, method: "patch" do |f| %>
    
      <fieldset>
    		<%= f.label :name, "Task"%>
    		<%= f.text_field :name %>

        <%= f.label :person_id, "Owner" %>
        <%= f.collection_select :person_id, Person.all, :id, :name, include_blank: "None" %>

    		<%= f.label :description %>
    		<%= f.text_area :description %>
    	</fieldset>
      <%= f.submit 'Update Task' %>
    <% end %>
  </div>

  <div class="button">
    <%= link_to "Return To Task List", "/" %>
  </div>

</div>