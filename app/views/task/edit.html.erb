<h1>Edit Your Task Plz</h1>

<%= form_for @task do |f| %>
  <fieldset>
    <legend>Edit Task</legend>
      <%= f.label :name %>
      <%= f.text_field :name, required: :true %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :completed_at %>
      <%= f.date_field :completed_at %>

    <%= f.submit "Edit Task", method: "patch" %>
  <% end %>

</fieldset>
