<%= form_for @task do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: :true %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.date_field :completed_at %>

  <%= f.label :person %>
  <%=
    @people.find(:all, :order => "name")
    collection_select(@people)
    %>

  <% if @task.id != nil %>
    <%= f.submit "Update Task", method: "patch" %>
  <% else %>
    <%= f.submit "Add Task" %>
  <% end %>

<% end %>

