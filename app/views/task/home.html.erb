<h1>Task List</h1>
<p>
  <a href= "/task/new">+ Add a new task</a>
</p>
<table>
  <thead>
    <tr>
      <th>
        Name <%= button_to "&#8595".html_safe, "/name_sort"%>
      </th>
      <th>
        Completed? <%= button_to "&#8595".html_safe, "/completed_sort"%>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @all_tasks.each do |task|%>
      <tr>
        <td>
          <a href=<%="/task_#{task.id}/details"%>>
          <%= task.name %>
        </a>
        </td>
        <% if task.completed == "yes" %>
        <td>
          <%= task.completed %>
        </td>
      <% else %>
        <td>
          <%= button_to "Complete!",  "/task_#{task.id}/mark_complete" %>
        </td>
        <% end %>
      <td> <%= button_to "Delete task", "task_#{task.id}", method: :delete, data: {confirm:"Are you sure?"} %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3">
        <a href="task/new">+ Add new Task</a>
      </td>
    </tr>
  </tbody>
</table>
