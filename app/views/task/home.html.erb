<h1>The Queen of Task Lists</h1>
<h2> Has arrived</h2>


<% @tasks.each do |task|  %>
  <ul>
    <li>
      <!-- linking the task person name to the unique task id -->
      <%= link_to "#{task[:name]}", "tasks/show/#{task[:id]}" %>,
      <%= task[:completed] %>,
      <%= button_to "Delete", "/tasks/delete/#{task.id}", method: "delete", action: "destroy",
      data: {:confirm => "Are you sure you want to delete?"} %>
    </li>
  </ul>
<% end %>
