<h1>Welcome to task list manager</h1>

<%= image_tag("welcome_manager.png", :alt => "welcome_manager", :class => "face") %>
<p><%= link_to "Add new task", "/task/add_task" %></p>

<table>
  <tr>
    <th>Task</th>
    <th>Completed?</th>
    <th>See the task</th>
    <th>Delete task</th>
    <th>Check completed task</th>
    <th>Uncheck task</th>
  </tr>

  <tr>
    <% @tasks.each do |task| %>
    <td><%= task[:name] %></td>
    <td><%= task[:completed_on] ? "âˆš" : "" %></td>
    <td><%= link_to "About task", "/show/#{task[:id]}" %></td>
    <td><%= link_to "Delete task", "/delete/#{task[:id]}" %></td>
    <td><%= button_to "check", "/check/#{task[:id]}", :class => "button", :method => :update %></td>
    <td><%= button_to "uncheck", "/uncheck/#{task[:id]}", :class => "button", :method => :update %></td>
  </tr>
    <% end %>
</table>
