<h1>Welcome to task list manager</h1>

<p><%= image_tag("welcome_manager.png", :alt => "welcome_manager", :class => "face") %></p>
<%= link_to image_tag("plus.png", :class => "plus"), "/task/add_task" %>
<%= link_to image_tag("people.png", :class => "face"), "/people/show" %>

<table>
  <tr>
    <th>Task</th>
    <th>Completed?</th>
    <th>See the task</th>
    <th>Delete task</th>
    <th>Check completed task</th>
    <th>Uncheck task</th>
    <th>Person responsible</th>
  </tr>

  <tr>
    <% @tasks.each do |task| %>
    <td><%= task[:name] %></td>
    <td><%= task[:completed_on] ? "âˆš" : "" %></td>
    <td><%= link_to "About task", "/show/#{task[:id]}" %></td>
    <td><%= link_to "Delete task", "/delete/#{task[:id]}" %></td>
    <td><%= button_to "check", "/check/#{task[:id]}", :class => "button", :method => :update %></td>
    <td><%= button_to "uncheck", "/uncheck/#{task[:id]}", :class => "button", :method => :update %></td>
    <td><%= task.person.name %></td>
  </tr>
    <% end %>
</table>
