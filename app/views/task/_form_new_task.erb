<%= form_for @task do |t| %>
  <fieldset>
    <legend>New task</legend>
    <%= t.label :name %>
    <%= t.text_field :name %>

    <%= t.label :description %>
    <%= t.text_field :description %>

    <%= t.label :completed_on %>
    <%= t.date_field :completed_on %>

    <%= t.select(:person_id, Person.all.map {|person| [person.name, person.id]},
    {include_blank: 'None'})%>

  <%= t.submit 'Add task' %>
<% end %>
