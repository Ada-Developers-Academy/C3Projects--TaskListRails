<div class="home">
  <h1>Tasks:</h1>

  <table>
  	<thead>
			<tr>
				<th></th>
				<th>Name</th>
				<th></th>
				<th>Delete?</th>
			</tr>
		</thead>
		<tbody>
			<% @tasks.each do |task| %>
				<tr>
				  <td>
		  		  <% if task.completed_at != nil %>	
		  		  	<%= link_to "\u2713", "/mark_incomplete/#{task.id}", method: :patch, class: "incomplete_task" %>
		  		  <% else %>
		  		  	<%= link_to "\u25A1", "/mark_complete/#{task.id}", method: :patch, class: "completed_task" %>
		  		  <% end %>
				  </td>
				  <td class="name">
						<% if task.completed_at != nil %>
							<span class="completed"><%= task.name %></span>
						<% else %>
							<span class="incomplete"><%= task.name %></span>
						<% end %>
					</td>

					<td class="details_button"><%= link_to "Details", "/show/#{task.id}" %></td>
					<td class="delete_button"> <%= link_to "X", "/delete/#{task.id}", method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %> </td>
				</tr>
			<% end %>

		</tbody>
  </table>

  <div class="button"><%= link_to "Add a New Task", "/new_task" %></div>

</div>