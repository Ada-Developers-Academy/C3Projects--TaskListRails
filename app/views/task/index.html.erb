
<h1>To Do List</h1>

<table>

  <tr>
    <th>Task Name</th>
    <th>Completion_status</th>
    <th>Completed Date</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task[:name] %></td>
      <td><%= task[:completion_status] %></td>
      <td><%= task[:completed_at] %></td>
    </tr>
  <% end %>

</table>
