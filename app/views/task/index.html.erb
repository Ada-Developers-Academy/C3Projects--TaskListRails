<body>
<h1>To Do List</h1>
<table>
  <tr>
    <th>Assigned to</th>
    <th>Task Name</th>
    <th>Completed?</th>
    <th>Delete?</th>
  <tr>
  <% @tasks.to_a.each do |task| %>
  <tr>
    <td><%= task.person.name %></td>
    <td><%= link_to "#{task.name}", "/show/#{task.id}" %></td>
    <td class="task_options"><% if task.completed_at == nil %>
      <%= link_to "\u274F", "/tasks/comp_status/#{task.id}", method: :get %>
      <% else %>
      <%= link_to "\u2714", "/tasks/ip_status/#{task.id}", method: :get %>
      <% end %>
    </td>
    <td class="task_options"><%= button_to "X", "/tasks/#{task.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
    <% end %>
  <tr>
    <td colspan="3", class="new_task"><%= button_to "Add New Task", "/tasks/new", method: :get %></td>
  </tr>
</table>
</body>
