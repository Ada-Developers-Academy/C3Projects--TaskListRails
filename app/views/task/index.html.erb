<table>

  <tr>
    <th>Task Name</th>
    <th>Completion Status</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to "#{task[:name]}", "task/#{task[:id]}" %></td>
      <td><%= task[:completion_status] %></td>
      <td><%= link_to "Delete Task", "delete/#{task[:id]}" %></td>
    </tr>
  <% end %>

</table>

<%= link_to "Add a Task!", "task/new" %>
