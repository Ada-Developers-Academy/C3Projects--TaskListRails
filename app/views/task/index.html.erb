<table>
  <tr>
    <th>Task #</th>
    <th>Task Name</th>
    <th>Date of Completion</th>
  <tr>
  <% @tasks.to_a.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><a href="/show/<%= task.id %>"><%= task.name %></td>
    <td><%= task.completed_at %></td>
  </tr>
    <% end %>
</table>

<%= link_to "Add New Task", "/tasks/new" %>
