<h1>Task Master!</h1>
<% completed_tasks = [] %>
<% incomplete_tasks = [] %>
<% @tasks.each do |task| %>
<%   if task[:date_completed] != nil %>
<%     completed_tasks.push(task) %>
<%   else %>
<%     incomplete_tasks.push(task) %>
<%   end %>
<% end %>

<%= button_to "Add a New Task", '/add_task', method: 'get' %>

<section>
<h3>Active Tasks (not yet complete):</h3>
<ol>
  <% incomplete_tasks.each do |task| %>
  <li><p><%= task[:task_name] %> (active) <%= button_to "Show Details", "/show/#{task.id}", class: "button" %>
  <%= button_to "Delete this task", "/delete_confirmation/#{task.id}" %></li></p>
  <% end %>
</ol>
</section>

<section>
<h3>Completed Tasks:</h3>
<ol>
  <% completed_tasks.each do |task| %>
  <!-- <% completed = "(active)" %> -->
  <li><p><%= task[:task_name] %> (completed) <%= button_to "Show Details", "/show/#{task.id}", class: "button" %>
  <%= button_to "Delete this task", "/delete/#{task.id}", method: "delete", action: "destroy" %></li></p>
  <% end %>
</ol>
</section>
