<%= form_for @task, url: "/task/edit_update/#{@task[:id]}" do |t| %>
  <fieldset>
    <legend>Edit task</legend>
    <%= t.label :name %>
    <%= t.text_field :name %>

    <%= t.label :description %>
    <%= t.text_field :description %>

    <%= t.label :completed_on %>
    <%= t.date_field :completed_on %>

    <%= t.label :person_id %>
    <%= t.select(:person_id, Person.all.map {|person| [person.name, person.id]},
    {include_blank: 'None'})%>
  </fieldset>

  <%= t.submit 'Confirm changes' %>
<% end %>
