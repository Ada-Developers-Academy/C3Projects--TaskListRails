<%= button_to "/edit/#{@task.id}" do %>
  <p>
   Edit
 </p>
<% end %>

<main class="task_details">
  <h1>
    <%= @task.name %>
  </h1>

  <p>
    <%= @task.description %>
  </p>

  <p>
    <% if !@task.completed_at.nil? %>
      <%= @task.completed_at.strftime("%m.%d.%Y") %>
    <% end %>
  </p>
  <br><br>
  <%= link_to "< Home", "/" %>
</main>
