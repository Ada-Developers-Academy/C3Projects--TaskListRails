  <thead>Task</thead>
  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Date</th>
    <th> Created at</th>
    <th>Updated at </th>
    <th>Completed </th>
  </tr>
  <tr>
    <td>  <%= @task.id %> </td>
    <td>  <%= @task.name %> </td>
    <td>  <%= @task.date %> </td>
    <td>  <%= @task.created_at %> </td>
    <td>  <%= @task.updated_at %> </td>
    <td>  <%= @task.completed %> </td>
  </tr>
</table>
