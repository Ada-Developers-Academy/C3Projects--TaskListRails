<h1> View Task </h1>
<h2>Here is the task from <%= "#{@task.name}" %> you requested</h2>

<table>
  <thead>Task</thead>

  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Description </th>
    <th> Date</th>
    <th> Assigned Person </th>
    <th> Created on</th>
    <th> Updated at </th>
    <th> Completed </th>
    <th> Update </th>
  </tr>

  <tr>
    <td>  <%= @task.id %> </td>
    <td>  <%= @task.name %> </td>
    <td>  <%= @task.description %> </td>
    <td>
      <% if @task.date != nil%>
        <%= @task.date.month %>/<%= @task.date.day %>/<%= @task.date.year %>
      <% else %>
        <%= "" %>
      <% end %>
    </td>
    <td>  <% (@task.person == nil) ? "N/A": @task.person.name %> </td>
    <td>  <%= @task.created_at.month %>/<%= @task.created_at.month %>/<%= @task.created_at.year %> </td>
    <td>  <%= @task.updated_at %> </td>
    <td>  <%= @task.completed %> </td>
    <td>  <%= link_to "Edit", "/tasks/#{@task.id}/edit" %> </td>
  </tr>
</table>
