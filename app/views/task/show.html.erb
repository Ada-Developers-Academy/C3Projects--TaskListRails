<h1>Task Details</h1>

<h2><%= "Task Name: #{@task.name}" %></h2>
<ul>
  <% if @task.description != "" %>
    <li><%= "Description: #{@task.description}" %></li>
  <% end %>

  <% if @task.completed_at != nil %>
   <li><%= "Date Completed: #{@task.completed_at}" %></li>
   <li><%= "Status: Task Complete!" %></li>
  <% else %>
   <li><%= "Status: Task Not Complete" %></li>
  <% end %>

  <%= button_to "Edit Task", "/tasks/update/#{@task.id}", method: "get" %>

  <%= button_to "Back to List", "/", method: "get" %>
</ul>
