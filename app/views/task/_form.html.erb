  <!-- form_for @task needs to be together -->
  <%= form_for @task, url: @url do |f| %>
<fieldset>
  <legend> Task Details </legend>

    <%= f.label :name %>
    <%= f.text_area :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :date %>
    <%= f.date_field :date %>

  <legend> Is this task completed? </legend>
    <%= f.label "completed" %>
    <%= f.radio_button(:completed, "Yes") %>
    <%= f.label "not_completed" %>
    <%= f.radio_button(:completed, "No") %>

</fieldset>
    <%= f.submit %>

  <% end %>

  <!-- checkmark is \u2713 -->
