
  <%= form_for @task do |f| %>
<fieldset>
  <legend> Task Details </legend>

    <%= f.label :name %>
    <%= f.text_area :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :date %>
    <%= f.date_field :date %>

  <legend> Is this task completed? </legend>
    <%= f.label "completed" %>
    <%= f.radio_button(:completed, "yes") %>
    <%= f.label "not_completed" %>
    <%= f.radio_button(:completed, "no") %>

</fieldset>
    <%= f.submit %>

  <% end %>

  <!-- checkmark is \u2713 -->
