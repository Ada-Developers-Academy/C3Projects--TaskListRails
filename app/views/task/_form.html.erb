<%= form_for @task, url: @url do |f| %>
<fieldset>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :complete_by, 'Complete By' %>
      <%= f.date_field :complete_by %>

      <%= f.submit %>
</fieldset>
<% end %>
