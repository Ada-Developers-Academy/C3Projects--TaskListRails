<fieldset>
  <legend>Book details:</legend>

  <!-- Includes a guard against blanks -->
  <%= f.label :taskname, "Title", :placeholder => 'required'%>
  <%= f.text_field :taskname, :required => true, :placeholder => 'required' %>

  <%= f.label :description, "Author" %>
  <%= f.text_field :description %>

  <%= f.label :datecomp, "Completed Date" %>
  <%= f.date_field :datecomp %>

  <%= f.label :comp_status, "Finished?" %>
  <%= f.select :comp_status, ([["read", "read"], ["unread", "unread"]]) %>

  <%= f.label :person_id, "Recommended by..." %>
  <%= f.select(:person_id, Person.all.map {|person| [person.name, person.id] }, { include_blank: "None" }) %>
</fieldset>

<%= f.submit 'Submit' %>
