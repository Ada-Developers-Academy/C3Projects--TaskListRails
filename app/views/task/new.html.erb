<div class="new">
  <h1>Create a New Task</h1>

  <%= form_for @task do |f| %>
  	<fieldset>
  		<%= f.label :name, "Task"%>
  		<%= f.text_field :name %>

  		<%= f.label :description %>
  		<%= f.text_area :description %>

  		<%= f.label :completed_at %>
  		<%= f.date_select :completed_at, {:include_blank => true, :default => nil} %>
  	</fieldset>

  	<%= f.submit 'Add New Task' %>
  <% end %>

  <%= link_to "Return To Task List", "/" %>

</div>