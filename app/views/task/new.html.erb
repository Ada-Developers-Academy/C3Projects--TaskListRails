<h2>Add a Task!</h2>

<%= form_for @add_task do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :completion_status, 'Completion Status' %>
      <%= f.text_field :completion_status %>

      <%= f.label :completed_at, 'Completion Date' %>
      <%= f.text_field :completed_at %>

      <%= f.submit 'Add a Task!' %>

<% end %>

<%= render "footer" %>
