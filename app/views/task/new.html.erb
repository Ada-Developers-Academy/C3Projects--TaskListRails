<div class="new">
  <h1>Create a New Task</h1>

  <div class="form">
    <%= form_for @task do |f| %>
    	<fieldset>
    		<%= f.label :name, "Task"%>
    		<%= f.text_field :name %>

        <%= f.label :person_id, "Owner" %>
        <%= f.collection_select :person_id, Person.all, :id, :name, include_blank: "None" %>

    		<%= f.label :description %>
    		<%= f.text_area :description %>
    	</fieldset>
      <%= f.submit 'Add Task' %>
    <% end %>
  </div>

  <div class="button"><%= link_to "Return To Task List", "/" %></div>

</div>