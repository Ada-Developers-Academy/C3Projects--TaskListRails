<h1>Add a new task</h1>

<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completed_at %>
  <%= f.date_field :completed_at%>

  <%= f.submit %>
<% end %>

<p>
  <a href="/">Never mind I have too much to do already!</a>
</p>
