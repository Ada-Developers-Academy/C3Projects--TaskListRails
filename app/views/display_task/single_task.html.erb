<table class="table_data">
  <tr class="table_headers">
    <th>Task Name</th>
    <th>Task Description</th>
    <th>Status</th>
    <th>Completed date</th>
  </tr>

  <tr>
    <td><%= @task.name %></td>
    <td><%= @task.description %></td>
    <td><% if @task.completed_at.nil? %>
          Not yet completed.
        <% else %>
          Completed.
        <% end %>
    </td>
    <td> <%= @task.completed_at %></td>
  </tr>
</table>
