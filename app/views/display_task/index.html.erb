<table class="table_data">
  <tr="table_headers">
    <th>Task Name</th>
    <th>Completed?</th>
    <th>Delete Task?</th>
  </tr>

  <% @all_tasks.each_with_index do |task, index| %>
    <tr>
      <td><%= link_to "#{task.name}", "/show/#{task.id}" %></td>
      <td><% if task.completed_at.nil? %>
            Not yet.
          <% else %>
            Yes!
          <% end %>
      </td>
      <td><%= link_to "Delete this task", "/delete/#{task.id}"%></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add a new task!", "/tasks/new" %>
