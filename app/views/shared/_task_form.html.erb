<%= form_for task, url: path do |f|%>
  <fieldset>
    <legend>Add a new task</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </fieldset>
  <%= f.submit button_message %>
<% end %>
