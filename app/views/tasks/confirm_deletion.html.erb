<header>
  <h1>Delete this Task?</h1>
</header>
<main>
  <table>
    <tr>
      <th>Id</th>
      <td><%= @delete_task.id %></td>
    </tr>
    <tr>
        <th> Task Name</th>
        <td><%= @delete_task.name %></td>
    </tr>
    <tr>
      <th> Task Description</th>
      <td><%= @delete_task.description %></td>
    </tr>
    <tr>
        <th> Completed Date</th>
        <% if @delete_task.completed_date == nil %>
          <td> <%= "Incomplete task" %> </td>
        <% else %>
          <% date = @delete_task.completed_date %>
          <% date = date.strftime("%m/%d/%Y") %>
          <td> <%= date %> </td>
        <% end %>
    </tr>
  </table>
<footer>
  <%= link_to 'Confirm Deletion', t, method: :delete %>
</footer>
</main>
