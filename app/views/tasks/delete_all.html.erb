<div class="task_list">
  <h2> Delete All Completed Tasks </h2>
  <ul>
    <% @all_completed_tasks.each do |task| %>
    <li>
      <%= link_to "#{task[:name]}", "/tasks/#{task[:id]}" %>
    </li>
    <% end %>
  </ul>
  <%= button_to "DELETE ALL FOREVER", "/tasks/delete/delete_all", {method: :delete, :class => "confirm"} %>
</div>
