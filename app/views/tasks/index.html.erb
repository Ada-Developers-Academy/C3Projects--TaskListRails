
<table>
  <tr>
    <th>id</th>
    <th>name</th>
    <th>master of the task</th>
  </tr>

<% task_num = 0 %>
<% @tasks.each do |t|%>

  <tr class="<%= t.completed ? 'completed' : 'uncompleted' %>" >
      <% @id = t.id%>
        <td><%= task_num += 1  %></td>
        <td><%= link_to "#{t.name}", "/task/#{@id}", method: :get %></td>
        <% unless t.person.name.nil? %>
        <td><%= t.person.name %></td>
        <% end %>
    <td><%= button_to "Mark task as completed", "/completed/#{@id}", method: :patch %></td>
    <td><%= button_to "update Task", "/update/#{@id}", method: :get %></td>
    <td><%= button_to "Delete Task", "/task/#{@id}/delete", method: :delete, data: { confirm: "Are you sure you want to delete this task"}  %></td>
  </tr>
<% end%>

</table>



