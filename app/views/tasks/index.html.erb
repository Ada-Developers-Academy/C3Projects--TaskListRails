
  <table>
    <tr class="theader">
      <td>Title</td>
      <td>Read It?</td>
      <td>Delete It</td>
      <td>Recommended By</td>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to "#{task.taskname}", "/tasks/#{task.id}" %></td>

        <!-- Display conditional based on the completion status -->
        <% if task.comp_status == "unread" %>
          <% ballot_box = "&#9744;" %>
        <% else %>
          <% ballot_box = "&#9745;" %>
        <% end %>

        <td class= "button-wrapper"><%= link_to ballot_box.html_safe, "/tasks/#{task.id}", method: :patch, class: "button" %></td>

        <td class= "button-wrapper"><%= link_to "&#10008;".html_safe, "/tasks/#{task.id}", method: :delete, data: { confirm: "Sure you want to delete this book from your reading list?" }, class: "button" %></td>

        <% unless task.person == nil %>
          <td><%= task.person.name %></td>
        <% end %>

      </tr>

    <% end %>
  </table>
