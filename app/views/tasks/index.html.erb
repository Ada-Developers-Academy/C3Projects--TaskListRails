 <section class="home">
  <table>
    <tr>
      <th colspan="3">Tasks</th>
    </tr>
   
    <% @tasks.each do |task| %>
      <tr>
        <td class="comp_status">
          <%= task.comp_date ? "\u2713" : "" %>
        </td>
        <td class="name">
          <% if task.comp_date %>
            <span class="complete"><%= link_to "#{task.name}", "tasks/#{task.id}" %></span>
          <% else %>
            <span class="incomplete"><%= link_to "#{task.name}", "tasks/#{task.id}" %></span>
          <% end %>
        </td>
        <td class="delete">
          <%= link_to "X", "tasks/delete/#{task.id}",  method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
        </td>
      </tr>
    <% end %>
  </table>
  <p class="create_task_link"><%= link_to "add a new task", "tasks/new" %></p>
</section>
