<h1>Add a new task:</h1>

<%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :date_completed %>
    <%= f.datetime_field :date_completed %>

    <%= f.submit 'Add task' %>
<% end %>