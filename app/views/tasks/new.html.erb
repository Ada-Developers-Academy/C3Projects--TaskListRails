<header>
  <h2>Add a new task to your list</h2>
</header>
<main>

  <%= form_for @new_task do |f| %>
    <fieldset>
      <%= f.label :name  %>
      <%= f.text_field :name %>

      <%= f.label :description  %>
      <%= f.text_area :description %>

    </fieldset>
    <%= f.submit 'Add Task' %>
  <% end %>
</main>
