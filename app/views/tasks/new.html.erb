<%= form_for @task do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name, required: :true %>

    <%= f.label :description, "Description:" %>
    <%= f.text_area :description, :placeholder => "(optional)" %>

    <%= f.label :date_completed, "Date completed:" %>
    <%= f.date_field :date_completed %>

    <%= f.submit "Add task", class: "default_button" %>
<% end %>
