<%= form_for @task do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description:" %>
    <%= f.text_field :description %>

    <%= f.label :date_completed, "Date completed:" %>
    <%= f.datetime_field :date_completed %>

    <%= f.submit 'Add task', class: "default_button" %>
<% end %>