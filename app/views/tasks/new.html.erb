<h2>Add Game</h2>

<%= form_for @task do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description, {:placeholder => "optional"} %>

    <%= f.label :person_id, "Recommended by" %>
    <%= f.collection_select(:person_id, Person.all, :id, :name) %>
  </fieldset>
  <%= f.submit %>
<% end %>
