
<%= form_for @task do |f| %>
  <fieldset>
    <legend>Add a new task here!</legend>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completed_date %>
  <%= f.date_field :completed_date %>

  <%= f.submit %>
  </fieldset>
  <% end %>

