<table border = "1">
  <tr>
    <th>
    Task
    </th>
    <th>
    Task Name
    </th>
    <th>
    Description
    </th>
    <th>
    Completed
    </th>
    <th>
    Completed Date
    </th>
    <th>
    Edit Task
    </th>
    <th>
    Mark Done
  </th>
  <th>
    Assigned To
  </th>
  </tr>

  <tr>
    <td>
      <%= @task.id %>
    </td>
    <td>
      <%= @task.name %>
    </td>
    <td>
      <%= @task.description %>
    </td>
    <td>
      <%= @task.completed %>
    </td>
    <td>
      <%= @task.completed_at %>
    </td>
    <td>
      <%= button_to "Update Task", "/modify/#{@task.id}", method: :get %>
    </td>
    <td>
       <%= button_to "Mark Done!", "/tasks/mark_complete/#{@task.id}",  method: :patch, data: { confirm: "Mark this task as Complete?" } %>
    </td>
    <td>
      <% unless @task.person.nil? %>
      <%= @task.person.name %>
      <% end %>
    </td>
    </tr>
</table>

<p>
<a href="/">Go Back to Task List</a>
</p>
