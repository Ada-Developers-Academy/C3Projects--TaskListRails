
<h1> Details About Your Task </h1>
<div class ="show">
<table>
  <tr>
    <th class="extra_padding"> Name </th>
    <th class="extra_padding"> Description </th>
    <th class="extra_padding"> Completed Date </th>
    <th class="extra_padding"> Person </th>
  </tr>

  <tr>
    <td>
        <%= @task.name %>
    </td>
    <td>
      <%= @task.description%>
    </td>
    <td>
      <%= @task.completed_at %>
    </td>
    <td>
      <% if @task.person_id %>
        <%= @task.person.name %>
      <% else %>
        <%= ""%>
      <% end %>
    </td>
  </tr>

</table>
</div>
<p>
<%= link_to "Back to Your List", "/" %>
</p>
<p>
  <%= link_to "Update Your Task", "#{@task.id}/edit" %>
