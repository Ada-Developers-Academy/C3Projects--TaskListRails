<header>
  <h1>Task Details</h1>
</header>
<main>
  <table class="details">
    <tr>
      <th>Id</th>
      <td><%= @show_task.id %></td>
    </tr>
    <tr>
        <th> Task Name</th>
        <td><%= @show_task.name %></td>
    </tr>
    <tr>
      <th> Task Description</th>
      <td><%= @show_task.description %></td>
    </tr>
    <tr>
        <th> Completed Date</th>
        <% if @show_task.completed_date == nil %>
          <td> <%= "Incomplete task" %> </td>
        <% else %>
          <% date = @show_task.completed_date %>
          <% date = date.strftime("%m/%d/%Y") %>
          <td> <%= date %> </td>
        <% end %>
    </tr>
  </table>
</main>
<footer>
  <%= button_to "Home", "/", class: 'go_home'  %>
</footer>
