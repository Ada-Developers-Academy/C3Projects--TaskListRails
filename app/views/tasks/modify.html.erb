<h1> Use this form to update and existing task in your Table </h1>

<%= form_for @modify, url:"/modify/#{@modify.id}" do |f| %>
<fieldset>
  <legend>Update an Existing Task </legend>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed %>
  <%= f.select :completed, options_for_select([['True', "t"], ['False', "f"]]) %>

  <%= f.label :person_id %>
  <%= f.select :person_id, options_for_select([['Michelle', 1], ['Lindsey', 2], ['Kari',3]]) %>


</fieldset>
<%=  f.submit "Looks Good! Update My Task!" %>
<% end %>
<br>
<br>

  <a href="/">Go Back to Task List</a>
