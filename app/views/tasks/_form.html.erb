<%= form_for @task, url: @url  do |f| %>
  <fieldset>
    <legend> <%= @legend %> </legend>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completed_date %>
  <%= f.date_field :completed_date %>

  <%= f.submit %>
  </fieldset>
  <% end %>
