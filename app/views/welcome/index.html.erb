<main>
  <nav>
    <p>
      <%= link_to "+ New Task", "/new" %>
    </p>
  </nav>

  <table class="notebook">
    <tr>
      <th>
        <!-- empty space -->
      </th>
      <th>
        <h1>Things To Do</h1>
      </th>
      <th>
        <!-- empty space -->
      </th>
    </tr>

    <% @tasks.each do |task| %>
    <tr>
      <% if task.completed_at %>
      <td>
          <%= check_box_tag "completed", 1, true %>
      </td>
      <td class="task-completed">
        <p>
          <%= link_to task.name, "/show/#{task.id}" %>
        </p>
      </td>

      <% else %>
      <td>
          <%= check_box_tag "completed", 0, false %>
      </td>
      <td>
        <p>
          <%= link_to task.name, "/show/#{task.id}" %>
        </p>
      </td>
      <% end %>

      <td>
        <%= button_to "/delete/#{task.id}", data: { confirm: "Are you sure? This task will be gone FOR-EV-ER." } do %>
          <p>
           Delete
         </p>
        <% end %>
      </td>
    </tr>
    <% end %>

  </table>
</main>
